apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: msr-appset-test
spec:
  goTemplate: true
  generators:
  - list:
      elements:
        - cluster: engineering-dev
          url: https://kubernetes.default.svc
          autoSync: true
          prune: true
          valueFiles:
            - 2-values.yaml
            - 3-values.yaml
  template:
    metadata:
      name: '{{.cluster}}-deployment'
    spec:
      project: "default"
      source:
        repoURL: https://github.com/kplogesh/webmethods-helm-charts.git
        targetRevision: HEAD
        path: microservicesruntime/helm
      destination:
        server: '{{.url}}'
        namespace: {{.cluster}}
  templatePatch: |
    spec:
      source:
        helm:
          valueFiles:
          {{- range $valueFile := .valueFiles }}
            - {{ $valueFile }}
          {{- end }}
    {{- if .autoSync }}
      syncPolicy:
        automated:
          prune: {{ .prune }}
        syncOptions:
          - CreateNamespace=true
    {{- end }}